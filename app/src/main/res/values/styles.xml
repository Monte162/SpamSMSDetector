<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Stilo basico del texto de la lista -->
    <style name="TextList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/list_text_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/list_text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/list_text_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/list_text_margin_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Stilo basico del titulo de la lista -->
    <style name="TextList.Title">
        <item name="android:textSize">@dimen/list_text_title_size</item>
    </style>

    <!-- Stilo basico del detalle de la lista -->
    <style name="TextList.Detail">
        <item name="android:textSize">@dimen/list_text_detail_size</item>
        <item name="android:textColor">@color/mediumGray</item>
    </style>

    <!-- Stilo basico del detalle de la lista -->
    <style name="TextList.Indicator">
        <item name="android:textSize">@dimen/list_text_indicator_size</item>
        <item name="android:textColor">@color/mediumGray</item>
    </style>


    <!-- Boton principal -->
    <style name="PrincipalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- cardview basico ocn su fondo -->
    <style name="cardViewBasic">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- layout encontrado en cada cardviwe, con orientacion vertical y su margenes -->
    <style name="cardViewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
